{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types",
      "src/types"
    ]
  },
  "include": ["src",
    "src/types"
  ],
  "exclude": ["node_modules", "dist", "./index_backup.tsx"]
}
